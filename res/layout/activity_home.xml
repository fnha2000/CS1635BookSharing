<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Home" >

    <ImageButton
        android:id="@+id/sellButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buyButton"
        android:layout_marginRight="55dp"
        android:contentDescription="@string/button_sell"
        android:src="@drawable/sell" />

    <ImageButton
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buyButton"
        android:layout_below="@+id/buyButton"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/button_help"
        android:src="@drawable/help" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sellButton"
        android:layout_alignTop="@+id/helpButton"
        android:contentDescription="@string/button_profile"
        android:src="@drawable/profile" />

    <ImageButton
        android:id="@+id/messagesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/helpButton"
        android:layout_below="@+id/helpButton"
        android:layout_marginTop="41dp"
        android:contentDescription="@string/button_messages"
        android:src="@drawable/messages" />

    <ImageButton
        android:id="@+id/appointmentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profileButton"
        android:layout_alignTop="@+id/messagesButton"
        android:contentDescription="@string/button_appointments"
        android:src="@drawable/appointments" />

    <ImageButton
        android:id="@+id/buyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="144dp"
        android:contentDescription="@string/button_buy"
        android:src="@drawable/buy" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/home_screen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buyButton"
        android:layout_below="@+id/buyButton"
        android:layout_marginLeft="20dp"
        android:text="@string/button_buy"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sellButton"
        android:layout_below="@+id/sellButton"
        android:layout_marginLeft="20dp"
        android:text="@string/button_sell"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/profileButton"
        android:layout_below="@+id/profileButton"
        android:text="@string/button_profile"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/messagesButton"
        android:layout_below="@+id/messagesButton"
        android:text="@string/button_messages"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/helpButton"
        android:text="@string/button_help"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/textView1"
        android:text="@string/button_appointments"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>